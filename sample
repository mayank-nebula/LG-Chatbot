// app/api/stream/route.ts
import { NextRequest, NextResponse } from "next/server";
import {
  createParser,
  ParsedEvent,
  ReconnectInterval,
} from "eventsource-parser";

// 1. Set runtime to Edge
export const runtime = "edge";

// Optional: Set region if your backend is in a specific location (e.g., AWS us-east-1)
// to reduce latency between the Edge function and your backend.
// export const preferredRegion = 'iad1'; 

const BACKEND_URL = process.env.BACKEND_SSE_URL || "http://localhost:8000/sse";

interface BrainTextPart {
  text: string;
}

interface BrainContent {
  parts: BrainTextPart[];
}

interface UpstreamPayload {
  content?: BrainContent;
}

export async function POST(req: NextRequest) {
  let body: unknown;
  try {
    body = await req.json();
  } catch (e) {
    return NextResponse.json({ error: "Invalid JSON body" }, { status: 400 });
  }

  const encoder = new TextEncoder();
  const decoder = new TextDecoder();

  try {
    const response = await fetch(BACKEND_URL, {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
      },
      body: JSON.stringify(body),
      // Forward the client disconnect signal to the backend
      signal: req.signal,
    });

    if (!response.ok) {
      const errorText = await response.text();
      return NextResponse.json(
        { error: "Upstream service error", details: errorText },
        { status: response.status }
      );
    }

    const stream = new ReadableStream({
      async start(controller) {
        // Create the SSE parser
        const parser = createParser((event: ParsedEvent | ReconnectInterval) => {
          if (event.type === "event") {
            const { event: eventName, data } = event;

            // Filter for your specific event type
            if (eventName === "brain/text") {
              try {
                const parsed: UpstreamPayload = JSON.parse(data);
                const text = parsed?.content?.parts?.[0]?.text;
                
                if (text) {
                  controller.enqueue(encoder.encode(`data: ${text}\n\n`));
                }
              } catch (e) {
                // Silently ignore parse errors for individual chunks
              }
            }
          }
        });

        // 2. Iterate over the stream using standard Web API
        if (!response.body) {
            controller.close();
            return;
        }

        const reader = response.body.getReader();

        try {
          while (true) {
            const { done, value } = await reader.read();
            if (done) break;
            // Feed the raw chunk to the parser
            parser.feed(decoder.decode(value));
          }
        } finally {
          controller.close();
        }
      },
    });

    return new Response(stream, {
      headers: {
        "Content-Type": "text/event-stream; charset=utf-8",
        "Cache-Control": "no-cache, no-transform",
        "Connection": "keep-alive",
      },
    });
  } catch (err: any) {
    // Ignore client disconnects
    if (err.name === 'AbortError') {
       return new Response(null, { status: 499 }); 
    }
    
    console.error("Edge Proxy Error:", err);
    return NextResponse.json(
      { error: "Internal Server Error" },
      { status: 500 }
    );
  }
}
